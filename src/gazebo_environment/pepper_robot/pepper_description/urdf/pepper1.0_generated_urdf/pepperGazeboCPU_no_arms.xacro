<!-- Drive controller -->
<gazebo>
  <plugin name="base_drive_controller" filename="libgazebo_ros_model_velocity.so">
      <robotNamespace>/pepper</robotNamespace>
      <commandTopic>cmd_vel</commandTopic>
      <outputVelocityTopic>output_vel</outputVelocityTopic>
      <updateRate>50.0</updateRate>
      <commandTimeout>0.5</commandTimeout>
      <!-- Publish odometry as needed -->
      <odometryTopic>odom</odometryTopic>
      <odometryFrame>odom</odometryFrame>
      <odometryRate>20.0</odometryRate>
      <publishOdometryTf>true</publishOdometryTf>
      <robotBaseFrame>base_footprint</robotBaseFrame>
      <!-- As measured in real robot odom_alpha3 and odom_alpha1 -->
      <gaussianNoiseXY>0.02</gaussianNoiseXY>
      <gaussianNoiseYaw>0.02645</gaussianNoiseYaw>

      <!-- To simulate closer to the real robot we modified the
      theoretical limits -->
      <linearVelocityLimit>${0.55 * 1.0}</linearVelocityLimit>
      <angularVelocityLimit>${2.0 * 1.0}</angularVelocityLimit>
      <linearAccelerationLimit>${0.55 * 0.8}</linearAccelerationLimit>
      <angularAccelerationLimit>${3.0 * 0.8}</angularAccelerationLimit>
      <linearJerkLimit>${5.0 * 0.9}</linearJerkLimit>
      <angularJerkLimit>${50.0 * 0.9}</angularJerkLimit>
  </plugin>
</gazebo>

<gazebo>
  <plugin name="ground_truth" filename="libgazebo_ros_p3d.so">
    <frameName>world</frameName>
    <bodyName>base_footprint</bodyName>
    <topicName>/pepper/odom_groundtruth</topicName>
    <updateRate>20.0</updateRate>
  </plugin>
</gazebo>

  <!-- Front -->
  <gazebo reference="SurroundingFrontLaser_frame">
    <sensor type="ray" name="front_laser_sensor">
      <pose>0 0 0 0 0 0</pose>
      <visualize>true</visualize>
      <update_rate>6.25</update_rate>
      <ray>
        <scan>
          <horizontal>
            <samples>15</samples>
            <resolution>1</resolution>
            <min_angle>-0.5235987755982988</min_angle>
            <max_angle>0.5235987755982988</max_angle>
          </horizontal>
        </scan>
        <range>
          <min>0.3</min>
          <max>7.0</max>
          <resolution>0.005</resolution>
        </range>
        <noise>
          <type>gaussian</type>
          <mean>0.01</mean>
          <stddev>0.01</stddev>
        </noise>
      </ray>
      <plugin name="gazebo_ros_front_laser_controller" filename="libgazebo_ros_laser.so">
        <topicName>/pepper/scan_front</topicName>
        <frameName>SurroundingFrontLaser_frame</frameName>
      </plugin>
    </sensor>
  </gazebo>

